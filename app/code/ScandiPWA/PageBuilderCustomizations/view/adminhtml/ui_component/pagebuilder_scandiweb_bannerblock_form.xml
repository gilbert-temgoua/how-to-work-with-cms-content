<?xml version="1.0" encoding="UTF-8"?>
<!--
/**
 * ScandiPWA_PageBuilderCustomizations
 *
 * @category ScandiPWA
 * @package  ScandiPWA_PageBuilderCustomizations
 * @author   Scandiweb <info@scandiweb.com>
 */
-->

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd"
      extends="pagebuilder_base_form">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">
                pagebuilder_scandiweb_bannerblock_form.pagebuilder_scandiweb_bannerblock_form_data_source
            </item>
        </item>
        <item name="label" xsi:type="string" translate="true">Custom Banner</item>
    </argument>

    <settings>
        <deps>
            <dep>pagebuilder_scandiweb_bannerblock_form.pagebuilder_scandiweb_bannerblock_form_data_source</dep>
        </deps>
        <namespace>pagebuilder_scandiweb_bannerblock_form</namespace>
    </settings>

    <dataSource name="pagebuilder_scandiweb_bannerblock_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/provider</item>
            </item>
        </argument>
        <dataProvider name="pagebuilder_scandiweb_bannerblock_form_data_source"
                      class="Magento\PageBuilder\Model\ContentType\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>

    <fieldset name="appearance_fieldset" sortOrder="10"
              component="Magento_PageBuilder/js/form/element/dependent-fieldset">
        <settings>
            <label translate="true">Appearance</label>
            <additionalClasses>
                <class name="admin__fieldset-visual-select-large">true</class>
            </additionalClasses>
            <collapsible>false</collapsible>
            <opened>true</opened>
            <imports>
                <link name="hideFieldset">${$.name}.appearance:options</link>
                <link name="hideLabel">${$.name}.appearance:options</link>
            </imports>
        </settings>
        <field name="appearance" formElement="select" sortOrder="10"
               component="Magento_PageBuilder/js/form/element/dependent-visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">default</item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                    <class name="admin__field-visual-select-container">true</class>
                </additionalClasses>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="AppearanceSourceBannerBlock"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>

    <fieldset name="banner_data" sortOrder="20">
        <settings>
            <label translate="true">Main</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="banner_title" sortOrder="10" formElement="input">
            <settings>
                <label translate="true">Title</label>
                <dataType>text</dataType>
                <dataScope>banner_title</dataScope>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="banner_subtitle" sortOrder="15" formElement="input">
            <settings>
                <label translate="true">Subtitle</label>
                <dataType>text</dataType>
                <dataScope>banner_subtitle</dataScope>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="banner_text" sortOrder="20" formElement="input">
            <settings>
                <label translate="true">Text</label>
                <dataType>text</dataType>
                <dataScope>banner_text</dataScope>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="banner_desktop_image_src" sortOrder="25" formElement="imageUploader">
            <settings>
                <label translate="true">Desktop Image</label>
                <componentType>imageUploader</componentType>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>4194304</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                        </uploaderConfig>
                        <previewTmpl>Magento_PageBuilder/form/element/uploader/preview</previewTmpl>
                    </settings>
                </imageUploader>
            </formElements>
        </field>
        <field name="banner_desktop_image_alt" sortOrder="30" formElement="input">
            <settings>
                <label translate="true">Desktop Image ALT</label>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="banner_desktop_image_title" sortOrder="35" formElement="input">
            <settings>
                <label translate="true">Desktop Image Title</label>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="banner_mobile_image_src" sortOrder="40" formElement="imageUploader">
            <settings>
                <label translate="true">Mobile Image</label>
                <componentType>imageUploader</componentType>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>4194304</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                        </uploaderConfig>
                        <previewTmpl>Magento_PageBuilder/form/element/uploader/preview</previewTmpl>
                    </settings>
                </imageUploader>
            </formElements>
        </field>
        <field name="banner_mobile_image_alt" sortOrder="45" formElement="input">
            <settings>
                <label translate="true">Mobile Image ALT</label>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="banner_mobile_image_title" sortOrder="50" formElement="input">
            <settings>
                <label translate="true">Mobile Image Title</label>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="banner_mobile_layout" sortOrder="55" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">MobileContentOverImage</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Layout Configuration For Mobile View</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">MobileContentOverImage</item>
                                <item name="label" xsi:type="string" translate="true">Content Over Image</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">MobileContentBelowImage</item>
                                <item name="label" xsi:type="string" translate="true">Content Below Image</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>

    <fieldset name="banner_button_data" sortOrder="30">
        <settings>
            <label translate="true">Banner Button</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="banner_button_visibility" sortOrder="5" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">0</item>
                </item>
            </argument>
            <settings>
                <dataType>select</dataType>
                <label translate="true">Display button</label>
                <dataScope>banner_button_visibility</dataScope>
                <switcherConfig>
                    <rules>
                        <rule name="0">
                            <value>0</value>
                            <actions>
                                <action name="0">
                                    <target>${ $.ns }.${ $.ns }.banner_button_data.banner_button_text</target>
                                    <callback>hide</callback>
                                </action>
                                <action name="1">
                                    <target>${ $.ns }.${ $.ns }.banner_button_data.banner_button_href</target>
                                    <callback>hide</callback>
                                </action>
                                <action name="2">
                                    <target>${ $.ns }.${ $.ns }.banner_button_data.banner_button_color</target>
                                    <callback>hide</callback>
                                </action>
                            </actions>
                        </rule>
                        <rule name="1">
                            <value>1</value>
                            <actions>
                                <action name="0">
                                    <target>${ $.ns }.${ $.ns }.banner_button_data.banner_button_text</target>
                                    <callback>show</callback>
                                </action>
                                <action name="1">
                                    <target>${ $.ns }.${ $.ns }.banner_button_data.banner_button_href</target>
                                    <callback>show</callback>
                                </action>
                                <action name="2">
                                    <target>${ $.ns }.${ $.ns }.banner_button_data.banner_button_color</target>
                                    <callback>show</callback>
                                </action>
                            </actions>
                        </rule>
                    </rules>
                    <enabled>true</enabled>
                </switcherConfig>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">0</item>
                                <item name="label" xsi:type="string" translate="true">No</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">1</item>
                                <item name="label" xsi:type="string" translate="true">Yes</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="banner_button_text" sortOrder="10" formElement="input">
            <settings>
                <label translate="true">Text</label>
                <visible>false</visible>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="banner_button_href" sortOrder="20" formElement="input">
            <settings>
                <label translate="true">Link URL</label>
                <visible>false</visible>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="banner_button_color" sortOrder="10" formElement="colorPicker">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">#f26323</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Button Color</label>
                <componentType>colorPicker</componentType>
                <placeholder translate="true">No Color</placeholder>
                <validation>
                    <rule name="validate-color" xsi:type="boolean">true</rule>
                </validation>
                <dataScope>banner_button_color</dataScope>
                <additionalClasses>
                    <class name="admin__field-medium">true</class>
                </additionalClasses>
            </settings>
            <formElements>
                <colorPicker>
                    <settings>
                        <colorPickerMode>full</colorPickerMode>
                        <colorFormat>hex</colorFormat>
                    </settings>
                </colorPicker>
            </formElements>
        </field>
    </fieldset>
</form>
